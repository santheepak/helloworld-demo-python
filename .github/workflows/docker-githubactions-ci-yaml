name: Docker-githubactions-ci
on: 
  push:
    paths-ignore:
      - CONTRIBUTING.md
      - README.md
      - LICENSE
 
jobs:
  myapp:
    runs-on: ubuntu-latest
    steps:
      - name: Code Checkout
        uses: actions/checkout@v6
 
      - name: Create Image
        run: docker build -t ${{ vars.DOCKER_USERNAME }}/heloworld-demo-phython-forked:v2 .
 
      - name: Verify Image
        run: docker images
 
      - name: create container
        run: docker run --name python-app -itd -p 8080:8080 ${{ vars.DOCKER_USERNAME }}/heloworld-demo-phython-forked:v2
 
      - name: view container
        run: docker ps

      - name: sleep
        run: sleep 20

      - name: Curl output
        run: curl -f http://localhost:8080

      - name: Docker Login
        uses: docker/login-action@v3.6.0
        with:
          username: ${{ vars.DOCKER_USERNAME }}
          password: ${{ secrets.DOCKER_TOCKEN }
 
      - name: Push Image
        run: docker push ${{ vars.DOCKER_USERNAME }}/heloworld-demo-phython-forked:v2
 
      - name: cleanup the container
        run: docker rm -f python-app
 
  k8scd-job:
      needs: [dockerci-job]
      runs-on: ubuntu-latest
      steps:
        - name: code-checkout
          uses: actions/checkout@v6
        - name: start minikube
          uses: medyagh/setup-minikube@latest

        - name: test minikube
          run: kubectl get pods -A
 
        - name: apply yaml file
          run: 
            kubectl apply -f k8s/.
            kubectl config set-context --current --namespace=python-app
            kubectl wait --for=condition=ready pod -l app=myapp
 
        - name: get status deployment
          run: 
            kubectl get ns
            kubectl get deploy,service -n python-app
 
        - name: Test services
          run:
            minikube service list
            minikube service myapp-service --url
            echo -n "-----opening the service----"
            curl -f $(minikube service myapp-service --url)/version
